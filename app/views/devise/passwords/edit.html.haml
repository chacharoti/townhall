#sign_in_form
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, wrapper: :bootstrap_horizontal_form)  do |user_form|
    .row
      .col-sm-6.col-sm-offset-3
        %h1 Change your password
        %br
        .has-error 
          - flash.each do |name, msg|
            .alert.alert-danger= msg
        %br
        = user_form.hidden_field :reset_password_token
        = user_form.input       :password
        = user_form.input       :password_confirmation


        = user_form.button      :submit, 'Change my password',  class: 'btn btn-yes large-text btn-block'

        %br
        
        .col-xs-12.text-center
          %p.decorated
            %span or
          %p.no_account Don't have an account?
          %b= link_to "Register", new_registration_path(resource_name), class: 'large-text'


