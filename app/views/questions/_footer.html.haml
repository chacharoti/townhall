.row.voting-info.mobile
  .col-xs-6.text-right
    = days_left(question.end_date)
  .col-xs-6.text-left
    = pluralize(question.votes.count, 'Vote')

.row.social-networks.addthis_sharing_toolbox

.know-more-about-you-mobile

- content_for :javascript_includes do
  = javascript_include_tag "application", "https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&libraries=places"

:javascript
    $(document).ready(function() {
      $('#submit-info').on('click', function() {
        $('#know-more-about-you .description').text("Thank you, it's nice to know you");
        $('#know-more-about-you form').addClass('hidden');
      });
    })

   //google places for filling out location
   function initializeAutocomplete(){
     var input = document.getElementById('user_location');
     var options = {
       types: ['(cities)']
     };

     var autocomplete = new google.maps.places.Autocomplete(input, options);

   }
   $(function() {
     initializeAutocomplete();
   });
