%hr.mobile
.reason-list.yes
  %h3
    #{ question.votes.yes.count } voted
    %span.vote-type "Yes":

  %ul.results
    - question.reasons_for.each do |reason|
      %li
        .count= reason.votes
        .reason= reason.name
        - if reason.user_contributed === true
          .icon

