.container#voting.voting
  .banner_container
    .banner_img
      = image_tag @question.cover_image.mobile, class: 'cover_image'
  .question
    %h1= @question.title
    .question-content
      = @question.description

  =  form_for Vote.new, url: organization_question_votes_path(@question), html: { method: :post } do |f|
    = f.hidden_field :vote_type
    .vote-actions
      .row
        .col-xs-12
          .action
            .btn.btn-vote.btn-yes Yes
          .action
            .btn.btn-vote.btn-maybe Maybe
          .action
            .btn.btn-vote.btn-no No
    %label.checkbox.info.text-center
      = check_box_tag :more_info, true, true
      %span.check-sign
      %span Iâ€™d like to hear more from Melbourne City (?)

  .row.voting-info
    .col-xs-6.text-right
      = days_left(@question.end_date)
    .col-xs-6.text-left
      = pluralize(@question.votes.count, 'Vote')

  .row.social-networks
    .social-ntw.twitter
    .social-ntw.facebook
    .social-ntw.linkedin

  .row
    .logo.text-center= image_tag('townhall-logo.png')