<%= simple_form_for [:organizer, @question] do |f| %>
    <%= f.input :title, label: 'Question', wrapper: :horizontal_form %>
    <%= f.input :description, label: 'Description', wrapper: :horizontal_form %>
    <div class="row">
      <div class="large-12 columns select-date-wrapper">
        <%= f.label 'Start date' %>
        <%= f.date_select   :start_date, 
                            options = { start_year: DateTime.now.year, 
                                        end_year: DateTime.now.year + 3, 
                                        order: [:month, :day, :year], 
                                        include_blank: false},
                            html_options = { class: 'select-date'} %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns select-date-wrapper">
        <%= f.label 'End date' %>
        <%= f.date_select   :end_date, 
                            options = { start_year: DateTime.now.year, 
                                        end_year: DateTime.now.year + 3, 
                                        order: [:month, :day, :year], 
                                        include_blank: false},
                            html_options = { class: 'select-date'} %>
      </div>
    </div>
    <%= f.button :submit %>
<% end %>
