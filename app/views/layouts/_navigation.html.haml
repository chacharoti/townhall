    .navbar-header
      = link_to 'Home', root_path, class: 'navbar-icon home', alt: 'home'
      = link_to 'Contact', root_path, class: 'navbar-icon contact', alt: 'contact'
      = link_to 'Follow', root_path, class: 'navbar-icon follow', alt: 'rss feed'

      #nav-toggle-btn.pull-right(data-toggle='offcanvas' data-target='#townhall-nav')
